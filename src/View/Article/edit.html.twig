{% extends 'layout.html.twig' %}

{% block title %}Éditer un article{% endblock %}

{% block content %}
    <h1>Éditer l'article</h1>
    <form method="post">
        <label for="title">Titre :</label>
        <input type="text" name="title" id="title" value="{{ article.title }}" required><br>

        <label for="content">Contenu :</label>
        <textarea name="content" id="content" required>{{ article.content }}</textarea><br>

        <label for="image">Image (facultatif) :</label>
        <input type="text" name="image" id="image" value="{{ article.image }}"><br>

        <button type="submit">Enregistrer</button>
    </form>
{% endblock %}
